<%- include('partials/header.ejs'); %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <h1 class="text-center mt-4 mb-4">Confira alguns games e seus status</h1>

        <% game.forEach(games => { %>
        <div class="card">
            <h3 class="card-header bg-primary text-light"><%= games.title %></h3>
            <div class="card-body">
                <h5 class="card-text">Preço: $<%= games.price %></h5>
                <p class="card-text"> Ano: <%= games.year %></p>
                <hr>
                <p><b>Ações</b></p>
                <a href="/game/<%= games.id %>" class="btn btn-warning">Editar</a>

                <form action="/game/delete" method="POST" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                    <input type="hidden" name="id" value="<%= games.id %>">
                    <button class="btn btn-danger">Excluir</button>

                </form>
            </div>
        </div>
        <br>
        <% }); %>

    </div>
</body>
<%- include('partials/footer.ejs'); %>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm("Deseja excluir esta categoria?");
        if (decision){
           form.submit();
        }
    }
</script>