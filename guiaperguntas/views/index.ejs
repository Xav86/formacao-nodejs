<%- include('partials/header.ejs'); %>

<body>
    <%- include('partials/navbar.ejs'); %>
    <div class="container">
        <br>
        <h1> Perguntas </h1>
        
        <a href="/perguntar" class="btn btn-primary">Perguntar</a>
        <hr>
        <% perguntas.forEach(perguntas => { %>

            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= perguntas.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= perguntas.id %>"><button class="btn btn-primary" >Responder</button></a>
                </div>
            </div>
            <br>

        <% } ) %>
    </div>

</body>

