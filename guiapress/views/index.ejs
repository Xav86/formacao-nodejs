<div class="container">
    <br>
    <h1>Confira alguns artigos!</h1>
    <br>
    <% articles.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success">Visualizar</a>
            </div>
        </div>
        <br>
    
    <% }); %>

</div>   
