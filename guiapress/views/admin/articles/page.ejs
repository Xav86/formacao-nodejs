<%- include('../../partials/header.ejs'); %>
<body>
<%- include ('../../partials/homenavbar.ejs') %>
<div class="container">
    <br>
    <h1>Confira alguns artigos!</h1>
    <br>
    <% result.articles.rows.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success">Visualizar</a>
            </div>
        </div>
        <br>
    
    <% }); %>

    <div class="row">
        <div class="col col-12">

            <% if(result.page > 2) { %>
                <a href="/articles/page/<%= result.page - 1 %>" class="btn btn-primary" style="float: left;"><<< Prev </a>

            <% }else if(result.page == 2){ %>
                <a href="/>" class="btn btn-primary" style="float: left;"><<< Prev </a>

            <% } %>

            <% if(result.next) { %>
            <a href="/articles/page/<%= result.page + 1 %>" class="btn btn-primary" style="float: right;">Next >>></a>

            <% } %>
        </div>
    </div>
</div>   

</body>
<%- include ('../../partials/footer.ejs') %>